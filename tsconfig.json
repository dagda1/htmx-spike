{
  "extends": "@cutting/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": ["app", "server"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@app/*": ["./app/*"],
      "@server/*": ["./server/*"]
    }
  },
  "include": ["app/**/*.tsx", "app/**/*.ts", "server/**/*.tsx", "server/**/*.ts"]
}
